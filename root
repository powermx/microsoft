#!/bin/bash
echo "Este sencillo script te permitirÃ¡ habilitar tu cuenta root"
echo "Iniciando"
echo '
PermitRootLogin yes
PubkeyAuthentication yes
PasswordAuthentication yes
' >> /etc/ssh/sshd_config
service ssh restart
echo "Ahora agregaremos un password a tu cuenta root"
passwd root
echo "Listo!!"
rm root
